<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangish"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle"
        app:elevation="0dp">
    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom"
        android:layout_marginTop="50dp"
        android:height="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_below="@+id/bar_layout"
        android:fontFamily="@font/typer_roboto_bold_italic"
        android:textColor="@color/lightGrey"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/username"
        android:textSize="20sp"
        android:textAllCaps="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_below="@+id/bar_layout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"/>





    <Button
        android:id="@+id/delUsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_del_custom"
        android:fontFamily="@font/typer_roboto_regular"
        android:text="Request Delete account"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
